<!DOCTYPE html>
<html>
  <head>
    <title>RailsExam3</title>
    <meta name = "viewport" content="width=device-width">

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <nav class="navbar navbar-default">
    <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=“#gnavi">
        <span class=“sr-only"></span>
        <span class=“icon-bar”></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand">I○stagram</a>
    </div>
    <div id="gnavi" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <% if logged_in? %>
          <li><%= link_to "プロフィール", user_path(current_user.id) %></li>
          <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
        <% else %>
          <li><%= link_to "新規登録", new_user_path %></li>
          <li><%= link_to "ログイン", new_session_path %></li>
        <% end %>
        <% if logged_in? %>
          <li><%= link_to "投稿一覧", feeds_path %></li>
          <li><%= link_to "新規投稿", new_feed_path %></li>
          <li><%= link_to "ユーザー一覧", users_path %></li>
          <li><%= link_to "お気に入り一覧",favorites_path(current_user.id) if current_user %></li>
        <% end %>
      </ul>
    </div>
  </div>
  </nav>
  <% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
    <%= yield %>
  </body>
</html>
