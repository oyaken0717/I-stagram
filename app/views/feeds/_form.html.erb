<%= form_with(model: @feed, local: true, url: choose_new_or_edit) do |form| %>
  <% if @feed.errors.any? %>
    <div id ="error_explanation">
      <h2><%= @feed.errors.count %>件のエラーがあります。_form.html.erb</h2>
      <ul>
        <% @feed.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "field">
    <%= form.label :写真 %><br>
    <%= image_tag(@feed.image.url) if @feed.image.url %><br>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>

　<div class = "feed_content">
    <%= form.label :文章 %><br>
    <%= form.text_field :content%>
  </div>

  <div class = "actions">
    <%= form.submit %>
  </div>
<% end %>
